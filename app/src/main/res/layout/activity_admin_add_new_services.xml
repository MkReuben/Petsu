<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminAddNewServicesActivity">



    <ImageView
        android:id="@+id/select_service_image"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:cropToPadding="false"
        android:scaleType="centerCrop"
        android:layout_centerHorizontal="true"
        android:src="@drawable/serviceimage"
        android:layout_marginTop="10dp"

        />
    <EditText
        android:id="@+id/service_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/select_service_image"
        android:inputType="textMultiLine"
        android:layout_marginTop="20dp"
        android:hint="Service Name.."
        android:layout_marginLeft="45dp"
        android:padding="20dp"
        android:layout_marginRight="45dp"
        android:background="@drawable/input_design"

        />
    <EditText
        android:id="@+id/service_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/service_name"
        android:inputType="textMultiLine"
        android:layout_marginTop="20dp"
        android:hint="Service Description.."
        android:layout_marginLeft="45dp"
        android:padding="20dp"
        android:layout_marginRight="45dp"
        android:background="@drawable/input_design"

        />
    <EditText
        android:id="@+id/service_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/service_description"
        android:inputType="textMultiLine"
        android:layout_marginTop="20dp"
        android:hint="Max-Min Price"
        android:layout_marginLeft="45dp"
        android:padding="20dp"
        android:layout_marginRight="45dp"
        android:background="@drawable/input_design"

        />
    <EditText
        android:id="@+id/service_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/service_price"
        android:inputType="textMultiLine"
        android:layout_marginTop="20dp"
        android:hint=" Service Location"
        android:layout_marginLeft="45dp"
        android:padding="20dp"
        android:layout_marginRight="45dp"
        android:background="@drawable/input_design"

        />
    <Button
        android:id="@+id/add_service_btn"
        android:layout_below="@+id/service_location"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:text="Add Service"
        android:textColor="#FFF"
        android:background="@drawable/buttons"
        android:padding="17dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</RelativeLayout>